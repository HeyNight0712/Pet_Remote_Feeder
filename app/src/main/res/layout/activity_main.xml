<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="24sp"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.5"
            android:id="@+id/textView"
            app:layout_constraintBottom_toTopOf="@+id/main_bluetooth_connect_button2"/>

    <Button
            android:text="@string/main_bluetooth_connect_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_bluetooth_connect_button2"
            android:layout_marginTop="152dp"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/main_PRF_setup_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>

    <Button
            android:text="@string/main_PRF_setup_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_PRF_setup_button"
            android:layout_marginTop="42dp"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/main_bluetooth_connect_button2"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/main_setup_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>

    <Button
            android:text="@string/main_setup_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_setup_button"
            android:layout_marginTop="43dp"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/main_PRF_setup_button"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:text="@string/app_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="55dp"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>